/* pages/travelInfo/travelInfo.wxss */

/* 页面总体样式 */
.info{
  padding: 0 25rpx 120rpx 25rpx;

}

/*  页面轮播图部分样式 */
.info-imgs{
  padding: 20rpx 0;
  position: relative;
}
.info-imgs swiper{
  height: 350rpx;
}

.info-imgs text{
  position: absolute;
  background-color: red;
  left: 0;
  text-align: center;
  font-size: 24rpx;
  color: white;
  width: 60rpx;
  border-top-left-radius: 15rpx;
  border-bottom-right-radius:15rpx;
}

.info-imgs image{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;

}

/* 页面内容部分样式 */
.info-detail{
  font-size: 26rpx;
}
.title{
  font-size: 36rpx;
  margin: 15rpx 0;
}

.detail-attention text{
  display: block;
  margin-bottom: 7rpx;
}

/* 页面地图距离部分样式 */
.route-detail{
  margin: 20rpx 0;
  text-align: center;
  border: 1rpx solid #aaa;
  font-size: 24rpx;
  line-height: 50rpx;
}

.route-from-to view{
  padding:0 10rpx;
  text-align: left;
  border-top: 1rpx solid #aaa;
}

.route-map{

}

.route-map map{
  width: 100%;
  height: 600rpx;
}


/* 页面下边报名条 */
.info-join{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  color: #8A8A8A;
  x-index: 9999;
  text-align: center;
  border-top: 1rpx #aaa solid;
}

.info-join .contact{
  font-size: 24rpx;
  float: left;
  width: 20%;  
  background-color: white;
}
.info-join .sign-up{
  height: 100%;
  width: 599rpx;
  float: left;
  border-left: 1rpx solid #aaa;
  background-color: rgb(89, 191, 182);
}

.sign-up text{
  line-height: 100rpx;
  color: white;
}

.contact image{
  margin: 10rpx 50rpx 0 50rpx;
  width: 50rpx;
  height: 50rpx;
}

/* 自驾协议弹框 */
.agreement{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background-color: rgba(0,0,0,0.5);
  font-size: 26rpx;
}
.ag-alert{
  background: white;
  width: 550rpx;
  height: 710rpx;
  margin: 150rpx 75rpx 50rpx 75rpx;
  padding: 30rpx;
  overflow-y:auto;
}

.ag-title{
  text-align: center;
  margin-bottom: 15rpx;
}
.ag-content text{
  display: block;
  margin-top: 10rpx;
}
.ag-btn{
  margin: 0 100rpx;
}
.ag-btn button{
  display: inline-block;
  font-size: 26rpx;
  width: 150rpx;
  margin: 0 60rpx;
}
